= render 'shared/global_header'
= render 'shared/breadcrumb_list'
.mypage-wrapper
  .mypage-content
    = render 'shared/mypage_sidebar'
    .mypage-content__profile
      %h2.mypage-content__profile__title 本人情報の登録
      .mypage-content__identification--box
        %div.clearfix
          %p
            お客さまの本人情報をご登録ください。
            %br
            登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
          = link_to "#" , class: "mypage-content__identification--link" do
            本人確認書類のアップロードについて
            = fa_icon 'chevron-right'
        = form_with  url:"#", method: :patch, local: true do |f| 
          .mypage-content__identification--form
            %label
              お名前
              .mypage-content__identification--form--msg.mypage-content__identification--form--msg-red
                必須
            = f.text_field :last_name, placeholder: '例）山田', class:'mypage-content__identification--form--input'
            = f.text_field :first_name, placeholder: '例）彩', class:'mypage-content__identification--form--input'
          .mypage-content__identification--form
            %label
              お名前カナ
              .mypage-content__identification--form--msg.mypage-content__identification--form--msg-red
                必須
            = f.text_field :last_name_kana, placeholder: '例）ヤマダ', class:'mypage-content__identification--form--input'
            = f.text_field :first_name_kana, placeholder: '例）アヤ', class:'mypage-content__identification--form--input'
          .mypage-content__identification--form
            %label
              生年月日
              .mypage-content__identification--form--msg.mypage-content__identification--form--msg-red
                必須
            = f.select :birth_year,["--"],{},{class:'mypage-content__identification--form--short-input', id:"select_birth_year"}
= render 'shared/global_footer'
= render 'shared/sell_button'