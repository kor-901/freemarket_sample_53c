= render 'shared/global_header'
.main-item
  %section.item-box
    .item-box__name
      %h1=@item.name
    .item-box__main
      .item-box__main--photo
        %div
          %img{class: "item-box__main--photo--img", src: "#{@images.first.image_url}"}
        -# .photo
        -#   - @images.each do |image|
        -#     = image_tag @image.image_url
        #image-list.photo
          = image_tag "http://placehold.jp/60x111.png"
        #image-list.photo
          = image_tag "http://placehold.jp/60x65.png"
        #image-list.photo
          = image_tag "http://placehold.jp/60x84.png"
        #image-list.photo
          = image_tag "http://placehold.jp/60x60.png"
        #image-list.photo
          = image_tag "http://placehold.jp/60x60.png"
        
      %table.item-box__main--detail
        %tbody
          %tr
            %th 出品者
            %td
              = link_to "#" do
                = @item.seller.nickname 
              .face
                %div
                  = fa_icon "smile-o", class: "good-icon"
                  %span 24
                %div
                  = fa_icon 'meh-o', class: 'normal-icon'
                  %span 0
                %div
                  = fa_icon 'frown-o', class: 'bad-icon'
                  %span 0
          %tr
            %th カテゴリー
            %td
              = link_to "#" do
                = @category_parent
              = link_to "#" do
                = fa_icon "chevron-right"
                = @category_child
              =link_to "#" do
                = fa_icon "chevron-right"
                = @item.category.name
          %tr
            %th ブランド
            %td
              = @item.brand
          %tr
            %th 商品サイズ
            %td= @item.size.name
          %tr
            %th 商品の状態
            %td= @item.condition.name
          %tr
            %th 配送料の負担
            %td= @item.postage_burden.name
          %tr
            %th 配送の方法
            %td= @item.delivery_method.name
          %tr
            %th 配送元地域
            %td
              = link_to "#",class:"#" do
                = @item.prefecture.name
          %tr
            %th 発送日の目安
            %td= @item.delivery_day.name
    .item-box__price
      %span.price 
        = "¥#{@item.price.to_s}"
      %span.tax (税込)
      %span.shipping
        - if @item.postage_burden_id == 1
          送料込み
        - else
          着払い
    =link_to "購入画面に進む", '#', class: "item-box__buy"
    .item-box__description
      = simple_format(@item.description)
    .item-box__button
      .item-box__button-left
        =link_to '' do
          = fa_icon 'heart'
          %span いいね!
          %span 5
        =link_to '' do
          = fa_icon 'flag'
          %span 不適切な商品の報告
      .item-box__button-right
        =link_to '' do
          = fa_icon 'lock'
          %span あんしん・あんぜんのへの取り組み
  .comment
    .comment__box
      %p相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
      .form
      .send コメントする
  %ul.page-icon
    %li.page-icon__left
      = link_to root_path do
        = fa_icon "chevron-left", class: "icon"
        前の商品
    %li.page-icon__right
      = link_to root_path do
        次の商品
        = fa_icon "chevron-right", class: "icon"
  .social-media
    %ul.social-media__box
      %li
        =link_to '' do
          = fa_icon 'facebook', class: "fa-facebook"
      %li
        =link_to '' do
          = fa_icon 'twitter', class: "fa-twitter"
      %li
        =link_to '' do
          = fa_icon 'pinterest', class: "fa-pinterest"
  .other-item-box
    %h2
      = link_to "#{@item.seller.nickname}さんのその他出品"
  
    .other-item-contents
      = render 'other_item'
= render 'shared/global_footer'