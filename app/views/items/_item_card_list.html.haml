
=link_to do
  .top-content__items__list__header
    %h3.top-content__items__list__header__title
      = category
    =link_to "もっと見る >", '', class: "top-content__items__list__header__more"
  .top-content__items__list__cards
    - items.each_with_index do |item, i|
      = link_to item_path(item.id), class: "top-content__items__list__cards__card" do
        %figure.top-content__items__list__cards__card__f
          .top-content__items__list__cards__card__outframe
            = image_tag images[i], class: 'top-content__items__list__cards__card__inside'
          %figcaption.top-content__items__list__cards__card__f__caption=item.name
          %span.top-content__items__list__cards__card__f__price= number_to_currency(prices[i], :unit => '¥', :precision =>0)